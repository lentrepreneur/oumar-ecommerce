{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block pages_hero_section %}
    {% include 'partials/pages-hero-section.html.twig' %}
{% endblock %}

{% block body %}
    {# Contact #}
    <div class="w-full p-8">
      <ul class="flex items-center gap-2">
        <li><a href="/">Accueil</a></li>
        <li>/</li>
        <li>A propos</li>
      </ul>
      <hr />
      <div class="w-full mb-5 mt-16">
        <div
          class="w-full bg-firstColor p-4 flex items-center max-md:flex-col max-md:gap-4"
        >
          <div
            class="w-1/3 max-md:w-full flex flex-col items-center justify-center gap-5"
          >
            <ion-icon name="locate"></ion-icon>
            <h3 class="text-sm font-semibold">Nos locaux</h3>
            <span>HLM Grand Yoff, Dakar, Senegal</span>
          </div>
          <hr />
          <div
            class="w-1/3 max-md:w-full flex flex-col items-center justify-center gap-5"
          >
            <ion-icon name="call"></ion-icon>
            <h3 class="text-sm font-semibold">Appelez nous !</h3>
            <span>+221 76 140 59 14</span>
          </div>
          <hr />
          <div
            class="w-1/3 max-md:w-full flex flex-col items-center justify-center gap-5"
          >
            <ion-icon name="mail"></ion-icon>
            <h3 class="text-sm font-semibold">Email</h3>
            <span>contact@alaminedesign.com</span>
          </div>
        </div>

        <hr class="my-8" />

        <div class="w-full flex flex-col items-center justify-center">
          <h2 class="font-semibold text-lg my-8 text-center">
            Laissez nous un message
          </h2>
          {% for message in app.flashes('success') %}
              <div class="p-4 w-full bg-green-600 text-white">
                  {{ message }}
              </div>
          {% endfor %}
          {% for message in app.flashes('error') %}
                  <div class="p-4 w-full bg-red-500 text-white">
                      {{ message }}
                  </div>
          {% endfor %}
          <div class="w-[50%] max-md:w-full">
            <form action="{{ path('app_contact_submit') }}" method="POST" class="w-full">
              <div class="flex items-center gap-4">
                <input
                  type="text"
                  name="fullName"
                  placeholder="Prenom et Nom"
                  class="w-1/2 border outline-none p-2"
                  required
                />
                <input
                  type="email"
                  name="email"
                  placeholder="Email"
                  class="w-1/2 border outline-none p-2"
                  required
                />
              </div>
              <input
                type="text"
                name="phone"
                placeholder="numero de telephone"
                class="w-full border outline-none p-2 my-4"
              />
              <textarea
                name="message"
                placeholder="Laissez votre message"
                class="w-full p-2 border outline-none"
                required
              ></textarea>
              <button
                type="submit"
                class="w-full bg-black text-white px-8 py-2 my-4"
              >
                Envoyer
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
